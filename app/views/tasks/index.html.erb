<h1>My tasks</h1>

<div>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <input type="checkbox" name="task">
      <label for="task"><%= link_to(task.title, task_path(task)) %></label>
      <%#= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
      <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
      <br/>
    <% else %>
      <input type="checkbox" name="task" checked>
      <label for="task"><%= link_to(task.title, task_path(task)) %></label>
      <%#= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
      <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
      <br/>
    <% end %>
  <% end %>
</div>
<br/>

<%= link_to("Create a new task", tasks_new_path) %>
